<body>
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-14 col-lg-9 col-xl-6">
          <img src="https://lavendermedia.vn/wp-content/uploads/2019/10/cach-chup-hinh-quang-cao-quan-ao.jpg"
            class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form action="/user/signup" method="POST">
          <input type="hidden" name="id" value="{{user._id}}">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example13">User Name</label>
              <input type="text" id="name" class="form-control form-control-lg" name="name" value="{{user.name}}" />
              
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example23">Email</label>
              <input type="email" id="email" class="form-control form-control-lg" name="email" value="{{user.email}}" />
             
            </div>

            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example23">Password</label>
              <input type="password" id="pass" class="form-control form-control-lg" name="password" value="{{user.password}}" />
              
            </div>
            
             
              
  
            
            <button  type="submit" class="btn btn-primary btn-lg btn-block">Sign up</button>
  
            
  
          </form>
        </div>
      </div>
    </div>
  </section>
  
  </body>
</html>